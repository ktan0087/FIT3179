{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": { "text": "Deaths rates by air pollution, (1990 - 2019)" },
  "projection": { "type": "equalEarth" },
  "params": [
    {
      "name": "year_selection",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ktan0087/FIT3179/main/W9/data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "lightgray" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ktan0087/FIT3179/main/DV2/data/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_boundary_lines_land"
        }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ktan0087/FIT3179/main/DV2/data/death_rate_by_air_pollution_per_100000.csv"
      },
      "transform": [
        {
          "lookup": "Entity",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ktan0087/FIT3179/main/W9/data/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "filter": "datum.Year == year_selection"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.5 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "Deaths",
          "type": "quantitative",
          "scale": {
            "scheme": "orangered"
          },
          "legend": { "title": "Death rate by air pollution" }
        },
        "tooltip": [
          { "field": "Entity", "type": "nominal" },
          {
            "field": "Deaths",
            "type": "quantitative",
            "title": "Death rate by air pollution",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "transparent"
  }
}
