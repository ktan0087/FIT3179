{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ktan0087/FIT3179/main/DV2/data/PM2.5_mean_annual_exposure_by_GDP.csv"
  },
  "width": 700,
  "height": 400,
  "params": [
    {
      "name": "year_selection",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Year == year_selection" },
    { "calculate": "'Test'", "as": "Test" }
  ],
  "encoding": {
    "x": {
      "field": "PM25",
      "type": "quantitative",
      "title": "Mean Annual PM2.5 Exposure (ug/m3)"
    },
    "y": {
      "field": "GDP per capita",
      "type": "quantitative",
      "title": "GDP per capita (USD)"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "center",
        "fontSize": 100
      },
      "encoding": {
        "text": { "field": "Year" },
        "x": { "value": 420 },
        "y": { "value": 250 },
        "opacity": { "value": 0.002 }
      }
    },
    {
      "params": [
        {
          "name": "highlight",
          "select": { "type": "point", "on": "mouseover" }
        },
        {
          "name": "select_by_country",
          "select": { "type": "point", "fields": ["Region"] },
          "bind": {
            "input": "select",
            "options": [
              null,
              "Africa",
              "Arab States",
              "Asia & Pacific",
              "Europe",
              "Middle East",
              "North America",
              "South/Latin America",
              "Others"
            ],
            "labels": [
              "Show All",
              "Africa",
              "Arab States",
              "Asia & Pacific",
              "Europe",
              "Middle East",
              "North America",
              "South/Latin America",
              "Others"
            ],
            "name": "Region: "
          }
        },
        {
          "name": "grid",
          "select": "interval",
          "bind": "scales"
        }
      ],
      "mark": {
        "type": "circle",
        "strokeWidth": 2
      },
      "encoding": {
        "size": {
          "condition": {
            "param": "highlight",
            "empty": false,
            "value": 300
          }
        },
        "color": {
          "condition": {
            "param": "select_by_country",
            "field": "Region",
            "type": "nominal"
          },
          "value": "lightgray"
        },
        "tooltip": [
          { "field": "Region", "type": "nominal", "title": "Region" },
          { "field": "Country", "type": "nominal", "title": "Country" },
          {
            "field": "GDP per capita",
            "type": "quantitative",
            "title": "GDP per capita (USD)",
            "format": ".2f"
          },
          {
            "field": "PM25",
            "type": "quantitative",
            "title": "Mean Annual PM2.5 Exposure (ug/m3)",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "transparent"
  }
}
