{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "repeat": {
    "row": ["AQI Value", "Ozone AQI Value", "PM AQI Value"],
    "column": ["PM AQI Value", "Ozone AQI Value", "AQI Value"]
  },
  "spec": {
    "data": {
      "url": "https://raw.githubusercontent.com/ktan0087/FIT3179/main/W10/data/data.csv"
    },
    "params": [
      {
        "name": "brush",
        "select": { "type": "interval", "resolve": "global" }
      },
      {
        "name": "org",
        "select": { "type": "point", "fields": ["AQI Category"] },
        "bind": {
          "input": "select",
          "options": [
            null,
            "Good",
            "Hazardous",
            "Moderate",
            "Unhealthy",
            "Unhealthy for Sensitive Groups",
            "Very Unhealthy"
          ],
          "labels": [
            "Show All",
            "Good",
            "Hazardous",
            "Moderate",
            "Unhealthy",
            "Unhealthy for Sensitive Groups",
            "Very Unhealthy"
          ],
          "name": "AQI Category: "
        }
      }
    ],
    "layer": [
      {
        "mark": { "type": "point" },
        "encoding": {
          "x": {
            "field": { "repeat": "column" },
            "type": "quantitative",
            "scale": { "domain": [0, 500] }
          },
          "y": {
            "field": { "repeat": "row" },
            "type": "quantitative",
            "scale": { "domain": [0, 500] }
          },
          "color": {
            "condition": {
              "selection": "brush",
              "field": "AQI Category",
              "type": "nominal",
              "param": "org"
            },
            "value": "grey"
          },
          "tooltip": [
            { "field": "AQI Category", "type": "nominal" },
            { "field": "AQI Value", "type": "quantitative" },
            { "field": "Ozone AQI Value", "type": "quantitative" },
            { "field": "PM AQI Value", "type": "quantitative" }
          ]
        }
      }
    ]
  }
}
